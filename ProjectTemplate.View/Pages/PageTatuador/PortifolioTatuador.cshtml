@page
@model ProjectTemplate.View.Pages.PageTatuador.PortifolioTatuadorModel

@{
    ViewData["Title"] = "Perfil Tatuador";
    Layout = "/Pages/Shared/_LayoutTatuador.cshtml";
}

<link href="~/assets/css/index.css" rel="stylesheet">

<div class="">
    <div id="carouselExampleControls" class=" carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div id="home" class="intro route bg-image" style="background-image: linear-gradient( rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.2) ), url(/images/tatuador/fotoTatuador/default/foto-default.jpg) !important;">
                    <div class="intro-content display-table">
                        <div class="table-cell">
                            <div class="container text-left">
                                <h1 class="intro-title mb-3">Eu sou @Model.Tatuador.PrimeiroNome @Model.Tatuador.SobrenomeCompleto</h1>

                                <div class="socials">
                                    <ul>
                                        @if (Model.Tatuador.Facebook != null)
                                        {
                                            <li><a href="@Model.Tatuador.Facebook"><span class="ico-circle-custom"><i class="ion-social-facebook"></i></span></a></li>
                                        }

                                        @if (Model.Tatuador.Instagram != null)
                                        {
                                            <li><a href="@Model.Tatuador.Instagram"><span class="ico-circle-custom"><i class="ion-social-instagram"></i></span></a></li>
                                        }

                                        @if (Model.Tatuador.Twitter != null)
                                        {
                                            <li><a href="@Model.Tatuador.Twitter"><span class="ico-circle-custom"><i class="ion-social-twitter"></i></span></a></li>
                                        }
                                        @if (Model.Tatuador.YouTube != null)
                                        {
                                            <li><a href="@Model.Tatuador.YouTube"><span class="ico-circle-custom"><i class="ion-social-youtube"></i></span></a></li>
                                        }
                                        @if (Model.Tatuador.LinkedIn != null)
                                        {
                                            <li><a href="@Model.Tatuador.LinkedIn"><span class="ico-circle-custom"><i class="ion-social-linkedin"></i></span></a></li>
                                        }
                                        @if (Model.Tatuador.WhatsApp != null)
                                        {
                                            <li><a href="@("https://api.whatsapp.com/send?phone=55" + @Model.Tatuador.WhatsApp)"><span class="ico-circle-custom"><i class="ion-social-whatsapp"></i></span></a></li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" id="IdTatuador" name="IdTatuador" asp-for="@Model.Tatuador.IdTatuador">
    </div>

    <!-- ======= About Section ======= -->
    <section id="sobre" class="about-mf sect-pt4 route">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-sm-6 col-md-5">
                                        <div class="about-img">
                                            @if (System.IO.File.Exists(@"wwwroot/images/tatuador/fotoTatuador/" + Model.Tatuador.IdTatuador + ".jpg"))
                                            {
                                                <img src="@("~/images/tatuador/fotoTatuador/" + Model.Tatuador.IdTatuador + ".jpg")" class="img-fluid rounded b-shadow-a" alt=""
                                                     asp-append-version="true">
                                            }
                                            else
                                            {
                                                <img class="img-fluid rounded b-shadow-a" alt="" src="/images/icone-perfil.jpg">
                                            }
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-7">
                                        <div class="about-info">
                                            <p><span class="title-s">Nome: </span> <span>@Model.Tatuador.PrimeiroNome @Model.Tatuador.SobrenomeCompleto</span></p>
                                            <p><span class="title-s">Profissão: </span> <span>Tatuador</span></p>
                                            <p><span class="title-s">Email: </span> <span>@Model.Tatuador.Email</span></p>
                                            <p><span class="title-s">Phone: </span> <span>@Model.Tatuador.Telefone</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="about-me pt-4 pt-md-0">
                                    <div class="title-box-2">
                                        <h5 class="title-left">
                                            Sobre mim
                                        </h5>
                                    </div>
                                    <p class="lead">
                                        @Model.Tatuador.TextoBibliografico
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="estudios">
        <div class="bg-dark-custom py-5">
            <div class="container pb-4">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="title-box text-center">
                            <h3 class="title-a-dark">
                                Estudios em que trabalho
                            </h3>
                            <p class="subtitle-a">
                                Conheça-os
                            </p>
                            <div class="line-mf-dark"></div>
                        </div>
                    </div>
                </div>
                <div class="card-columns">
                    @foreach (var estudio in Model.EstudioTatuador)
                    {

                        <a asp-area="" asp-controller="Estudio" asp-action="DetalhesEstudio" asp-route-id="@estudio.Estudio.NomeDeUsuario">
                            <div class="card">
                                @if (System.IO.File.Exists(@"wwwroot/images/estudio/fotoEstudio/" + estudio.IdEstudio + ".jpg"))
                                {
                                    <img class="card-img-top" src="@("~/images/estudio/fotoEstudio/" + estudio.IdEstudio + ".jpg")" alt="Card image cap"
                                         asp-append-version="true">
                                }
                                else
                                {
                                    <img class="card-img-top" src="/images/icone-perfil.jpg" alt="Card image cap">
                                }
                                <div class="card-body">
                                    <h5 class="card-title" style="color: black;">
                                        @if (estudio.Estudio != null)
                                        {
                                            @estudio.Estudio.NomeEstudio;
                                        }
                                    </h5>
                                </div>
                            </div>
                        </a>


                    }

                </div>
            </div>
        </div>
    </section>
</div>
